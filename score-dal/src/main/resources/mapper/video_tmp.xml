<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinemo.score.dal.score.mapper.VideoTmpMapper">

	<!-- 结果集对应关系 -->
	<resultMap id="result" type="com.shinemo.score.client.score.domain.VideoTmp" >
		<id column="id" property="id"/>
		<result property="score" column="score"/>
		<result property="videoId" column="video_id"/>
		<result property="weight" column="weight"/>
        <result property="videoName" column="video_name"/>
        <result property="xmVideoId" column="xm_video_id"/>
	</resultMap>

	<!-- 数据库字段 -->
	<sql id="columns">
		id, score, video_id, weight
	</sql>

    <sql id="table">
        video_tmp
    </sql>

    <!-- 查询条件 -->
    <sql id="conditions">
        <where>
            <choose>
                <when test="id != null">and id = #{id}</when>
                <otherwise>
					<if test="videoId != null">and video_id = #{videoId}</if>
                    <if test="xmVideoId != null">and xm_video_id = #{xmVideoId}</if>
                </otherwise>
            </choose>
        </where>
    </sql>

	<!-- 查询结果集 -->
    <select id="find" resultMap="result"
            parameterType="com.shinemo.score.client.score.query.VideoTmpQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        <if test="orderByEnable and orderByList != null and orderByList.size() > 0">
            order by
            <foreach collection="orderByList" item="orderBy" separator=",">
                ${orderBy.column} ${orderBy.sort}
            </foreach>
        </if>
        <if test="pageEnable">
            limit #{startRow}, #{pageSize}
        </if>
    </select>

	<!-- 查询某条记录 -->
    <select id="get" resultMap="result" parameterType="com.shinemo.score.client.score.query.VideoTmpQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        limit 1
    </select>

	<!-- 统计查询结果数量 -->
    <select id="count" resultType="long" parameterType="com.shinemo.score.client.score.query.VideoTmpQuery">
        select count(*) from
        <include refid="table"/>
        <include refid="conditions"/>
    </select>

	<!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.shinemo.score.client.score.domain.VideoTmp">
        insert into
        <include refid="table"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						id,
					</if>
                    <if test="score != null">
						score,
					</if>
                    <if test="videoId != null">
						video_id,
					</if>
                    <if test="weight != null">
						weight,
					</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						#{id, jdbcType=BIGINT},
                    </if>
                    <if test="score != null">
						#{score, jdbcType=REAL},
                    </if>
                    <if test="videoId != null">
						#{videoId, jdbcType=VARCHAR},
                    </if>
                    <if test="weight != null">
						#{weight, jdbcType=BIGINT},
                    </if>
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.shinemo.score.client.score.domain.VideoTmp">
        UPDATE video_tmp
        <set>
            <if test="score != null">
                score = #{score, jdbcType=REAL},
            </if>
            <if test="videoId != null">
                video_id = #{videoId, jdbcType=VARCHAR},
            </if>
            <if test="weight != null">
                weight = #{weight, jdbcType=BIGINT}
            </if>
        </set>
        WHERE
        id = #{id}
    </update>
</mapper>