<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinemo.score.dal.like.mapper.LikeMapper">

	<!-- 结果集对应关系 -->
	<resultMap id="result" type="com.shinemo.score.client.like.domain.LikeDO" >
		<id column="id" property="id"/>
		<result property="gmtCreate" column="gmt_create"/>
		<result property="gmtModified" column="gmt_modified"/>
		<result property="commentId" column="comment_id"/>
		<result property="uid" column="uid"/>
		<result property="type" column="type"/>
	</resultMap>

	<!-- 数据库字段 -->
	<sql id="columns">
		id, gmt_create, gmt_modified, comment_id, uid, type
	</sql>

    <sql id="table">
        like_log
    </sql>

    <!-- 查询条件 -->
    <sql id="conditions">
        <where>
            <choose>
                <when test="id != null">and id = #{id}</when>
                <otherwise>
					<if test="commentId != null">and comment_id = #{commentId}</if>
					<if test="uid != null">and uid = #{uid}</if>
					<if test="type != null">and type = #{type}</if>
                </otherwise>
            </choose>
        </where>
    </sql>


	<!-- 查询结果集 -->
    <select id="find" resultMap="result"
            parameterType="com.shinemo.score.client.like.query.LikeQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        <if test="orderByEnable and orderByList != null and orderByList.size() > 0">
            order by
            <foreach collection="orderByList" item="orderBy" separator=",">
                ${orderBy.column} ${orderBy.sort}
            </foreach>
        </if>
        <if test="pageEnable">
            limit #{startRow}, #{pageSize}
        </if>
    </select>

	<!-- 查询某条记录 -->
    <select id="get" resultMap="result" parameterType="com.shinemo.score.client.like.query.LikeQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        limit 1
    </select>

	<!-- 统计查询结果数量 -->
    <select id="count" resultType="long" parameterType="com.shinemo.score.client.like.query.LikeQuery">
        select count(*) from
        <include refid="table"/>
        <include refid="conditions"/>
    </select>

	<!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.shinemo.score.client.like.domain.LikeDO">
        insert into
        <include refid="table"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						id,
					</if>
					gmt_create,
					gmt_modified,
                    <if test="commentId != null">
						comment_id,
					</if>
                    <if test="uid != null">
						uid,
					</if>
                    <if test="type != null">
						type,
					</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						#{id, jdbcType=BIGINT},
                    </if>
                    now(),
                    now(),
                    <if test="commentId != null">
						#{commentId, jdbcType=BIGINT},
                    </if>
                    <if test="uid != null">
						#{uid, jdbcType=BIGINT},
                    </if>
                    <if test="type != null">
						#{type, jdbcType=INTEGER},
                    </if>
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.shinemo.score.client.like.domain.LikeDO">
        UPDATE like_log
        <set>
            gmt_modified = now(),
            <if test="commentId != null">
                comment_id = #{commentId, jdbcType=BIGINT},
            </if>
            <if test="uid != null">
                uid = #{uid, jdbcType=BIGINT},
            </if>
            <if test="type != null">
                type = #{type, jdbcType=INTEGER}
            </if>
        </set>
        WHERE
        id = #{id}
    </update>
</mapper>