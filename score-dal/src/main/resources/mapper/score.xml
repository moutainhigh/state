<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinemo.score.dal.score.mapper.ScoreMapper">

	<!-- 结果集对应关系 -->
	<resultMap id="result" type="com.shinemo.score.client.score.domain.ScoreDO" >
		<id column="id" property="id"/>
		<result property="gmtCreate" column="gmt_create"/>
		<result property="gmtModified" column="gmt_modified"/>
		<result property="status" column="status"/>
		<result property="videoId" column="video_id"/>
		<result property="score" column="score"/>
		<result property="uid" column="uid"/>
		<result property="extend" column="extend"/>
		<result property="version" column="version"/>
        <result property="num" column="num"/>
        <result property="thirdVideoId" column="third_video_id"/>
	</resultMap>


    <resultMap id="count_result" type="com.shinemo.score.client.score.domain.ScoreCountDO" >
        <id column="videoId" property="video_id"/>
        <result property="score" column="score"/>
        <result property="count" column="count"/>
    </resultMap>


	<!-- 数据库字段 -->
	<sql id="columns">
		id, gmt_create, gmt_modified, status, video_id, score, uid, extend, version,num,third_video_id
	</sql>

    <sql id="table">
        score
    </sql>

    <!-- 查询条件 -->
    <sql id="conditions">
        <where>
            <choose>
                <when test="id != null">and id = #{id}</when>
                <otherwise>
					<if test="status != null">and status = #{status}</if>
					<if test="videoId != null">and video_id = #{videoId}</if>
                    <if test="thirdVideoId != null">and third_video_id = #{thirdVideoId}</if>
					<if test="uid != null">and uid = #{uid}</if>
                </otherwise>
            </choose>
        </where>
    </sql>


	<!-- 查询结果集 -->
    <select id="find" resultMap="result"
            parameterType="com.shinemo.score.client.score.query.ScoreQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        <if test="orderByEnable and orderByList != null and orderByList.size() > 0">
            order by
            <foreach collection="orderByList" item="orderBy" separator=",">
                ${orderBy.column} ${orderBy.sort}
            </foreach>
        </if>
        <if test="pageEnable">
            limit #{startRow}, #{pageSize}
        </if>
    </select>



    <select id="find" resultMap="count_result" parameterType="java.util.List">
        select count(score) as score,video_id as video_id count(1) as count from <include refid="table"/>
        group by video_id where video id in
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>


	<!-- 查询某条记录 -->
    <select id="get" resultMap="result" parameterType="com.shinemo.score.client.score.query.ScoreQuery">
        select
        <include refid="columns"/>
        from
        <include refid="table"/>
        <include refid="conditions"/>
        limit 1
    </select>

	<!-- 统计查询结果数量 -->
    <select id="count" resultType="long" parameterType="com.shinemo.score.client.score.query.ScoreQuery">
        select count(*) from
        <include refid="table"/>
        <include refid="conditions"/>
    </select>

	<!-- 删除 -->
    <delete id="delete" parameterType="com.shinemo.score.client.score.query.ScoreQuery">
        delete from
        <include refid="table"/>
        where id = #{id}
    </delete>

	<!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.shinemo.score.client.score.domain.ScoreDO">
        insert into
        <include refid="table"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						id,
					</if>
					gmt_create,
					gmt_modified,
                    <if test="status != null">
						status,
					</if>
                    <if test="videoId != null">
						video_id,
					</if>
                    <if test="score != null">
						score,
					</if>
                    <if test="uid != null">
						uid,
					</if>
                    <if test="extend != null">
						extend,
					</if>
                    <if test="version != null">
						version,
					</if>
                    <if test="num != null">
                        num,
                    </if>
                    <if test="thirdVideoId != null">
                        third_video_id,
                    </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="id != null">
						#{id, jdbcType=BIGINT},
                    </if>
                    now(),
                    now(),
                    <if test="status != null">
						#{status, jdbcType=INTEGER},
                    </if>
                    <if test="videoId != null">
						#{videoId, jdbcType=VARCHAR},
                    </if>
                    <if test="score != null">
						#{score, jdbcType=INTEGER},
                    </if>
                    <if test="uid != null">
						#{uid, jdbcType=BIGINT},
                    </if>
                    <if test="extend != null">
						#{extend, jdbcType=LONGVARCHAR},
                    </if>
                    <if test="version != null">
						#{version, jdbcType=BIGINT},
                    </if>
                    <if test="num != null">
                        #{num},
                    </if>
                    <if test="thirdVideoId != null">
                        #{thirdVideoId},
                    </if>
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.shinemo.score.client.score.domain.ScoreDO">
        UPDATE score
        <set>
            gmt_modified = now(),version=version+1
            <if test="status != null">
                status = #{status, jdbcType=INTEGER},
            </if>
            <if test="videoId != null">
                video_id = #{videoId, jdbcType=VARCHAR},
            </if>
            <if test="score != null">
                score = #{score, jdbcType=INTEGER},
            </if>
            <if test="uid != null">
                uid = #{uid, jdbcType=BIGINT},
            </if>
            <if test="extend != null">
                extend = #{extend, jdbcType=LONGVARCHAR},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
            <if test="thirdVideoId != null">
                third_video_id = #{thirdVideoId},
            </if>
        </set>
        WHERE
        id = #{id} and version = #{version}
    </update>
</mapper>